.price
    &__main
        display grid
        grid-template-columns repeat(2,49%)
        column-gap 1%
        @media (max-width: 630px)
            grid-template-columns 100%
            overflow-y auto
            scrollbar-width thin

            &::-webkit-scrollbar
                width 3px
            &::-webkit-scrollbar-track
                background linear-gradient(to right, transparent 45%, #fff7 45% 55%, transparent 55%)
            &::-webkit-scrollbar-thumb
                background #fff
                border-radius 5px

    &__platforms
        display flex
        flex-direction column
        row-gap: ph(40)

    &__products
        display flex
        align-items center
        justify-content center
        margin-bottom ph(69)
        position relative
        height ph(110)
        &-control 
            cursor pointer

        & > .splide
            width 80%
            & .splide__list
                align-items center
            & .splide__slide
                transition font-size .6s
                &:not(.is-active)
                    font-size clamp(12px,30/1024*100vw,30px)
                &.is-active
                    font-size clamp(15px,55/1024*100vw,55px)

        

    &__switcher
        line-height 1
        text-align center
        cursor pointer

    
