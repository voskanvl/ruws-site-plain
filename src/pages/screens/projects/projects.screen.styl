coords(x,y)
    transform scale(1,1) translateX(x) translateY(y)
    opacity 1
    z-index 11

.projects
    --x: 10%
    display grid
    grid-template-columns repeat(6,13%)
    grid-template-rows repeat(5,13%)
    gap 1%
    position absolute
    width 90%
    top 22vh
    bottom 0
    left var(--x)

    // mq = (1440px 5 6) (1200px 4 7) (1024px 3 9)
    // for i in mq
    //     @media (max-width i[0])
    //         grid-template-columns repeat(i[1], 96% / i[1] )
    //         grid-template-rows repeat(i[2], 96% / i[2])

    // @media (max-width 768px)
    //         grid-template-columns 100%
    //         grid-template-rows 50px
    //         overflow-y auto

    &__panel
        border-radius 20px
        background #E5E5E57f
        backdrop-filter blur(4px)
        padding 4vmin
        font-size 1rem
        user-select none
        position absolute
        opacity 0
        transform scale(0,0) translate(0,0)
        z-index -1
        transition .6s .3s
        transform-origin 0 0
        will-change transfom

    &__item
        --time-shift 0ms
        --time-duration 1s
        perspective 500px
        user-select none
        position relative
        z-index 1
        transition .6s .3s

        &.main 
            font-size calc(var(--index) * 1.5)
        &.light 
            font-size calc(var(--index) * 1)
        &.lighter 
            font-size calc(var(--index) * .5)

        &::before
            content ""
            position absolute
            width calc(var(--index) * 1)
            height calc(var(--index) * 1)
            background #e51
            border-radius 50%
            left ph(-45)
            transform translateY(-50%)
            animation wave var(--time-duration) var(--time-shift) infinite

        &:hover
            z-index 2

        for j in (0..4)
            for i in (1..6)
                &:nth-child({j * 6 + i}):hover  > ^[0]__panel
                    coords((i - 1) * -20%, j * -20%)

    &__name
        width fit-content
        transform-origin 50% 50%
        white-space nowrap
        cursor pointer
        // font-size calc(var(--index) * 1.5)
        animation wave var(--time-duration) var(--time-shift) infinite


@keyframes wave 
    0%
        opacity .5
        rotate 0 1 0  0deg 
    50%
        opacity 1
        rotate 0 1 0  7deg 
    100%
        rotate 0 1 0  0deg 
        opacity .5







            


    
            
