include ../../pug/splides.pug

mixin panel(project)
    .panel
        if project.images && project.images.length
            .panel__slider
                .panel__slider-control.panel__slider-control--left !{'\u27f5'}
                +splide("panel"+project.id, project.images||[])
                    img.panel__slide(src= val)
                .panel__slider-control.panel__slider-control--right !{'\u27f6'}
