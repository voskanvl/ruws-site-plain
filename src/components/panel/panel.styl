.panel
    position relative
    display flex
    flex-direction column
    max-height 50vh

    @media (max-height 580px)
        max-height 70vh

    &__slider
        display flex
        align-items center
        margin-bottom ph(26)
        column-gap pw(21)


        & > .splide 
            max-width 40vw
            text-align center

            & .splide__slide
                transition .6s
                opacity 0.5
                scale 85% 85%
                &.is-active
                    z-index 2
                    opacity 1
                    scale 1 1


                // &:not(.is-active, .is-next, .is-prev)
                //     scale 55% 55%
                //     opacity .5
                
                &.is-prev
                &.is-next
                    opacity .8
                    scale 85% 85%
                    

    &__slider-control
        color #060511
        font-size 35px
        cursor pointer
            
    &__slide
        border-radius 15px
        overflow hidden

    &__title
        color #060511
        font-size clamp(15px,20/1024*100vw,20px)
        font-weight bold
        margin-bottom ph(13)
    
    &__text
            color #fff
            font-size clamp(11px,16/1024*100vw,16px)
            width 100%
            // white-space pre-wrap

    &__content
        display flex
        flex-direction column
        height auto
        overflow auto
        scroll-width thin
        &::-webkit-scrollbar
            width 2px
            background transparent
        &::-webkit-scrollbar-thumb
            background #fff
            width 4px
            border-radius 2px

    &__chapter
        display flex
        flex-direction column
        
        &:not(:last-child)
            margin-bottom ph(26)

    