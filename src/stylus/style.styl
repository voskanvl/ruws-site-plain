@import "./import";
:root
    font-family: Inter, Avenir, Helvetica, Arial, sans-serif
    font-size: 16px
    line-height: 24px
    font-weight: 400

    color-scheme: light dark
    color: rgba(255, 255, 255, 0.87)
    background-color: #242424

    font-synthesis: none
    text-rendering: optimizeLegibility
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    -webkit-text-size-adjust: 100%

a
    font-weight: 500
    // color: #fff
    text-decoration: inherit
    transition color .4s

a:hover
    color: #535bf2

body
    margin 0
    padding 0

h1
    font-size: 3.2em
    line-height: 1.1

button
    display block
    border none
    border-radius 40px
    padding 0.6em 1.2em
    font-size 1em
    font-weight 500
    font-family inherit
    background linear-gradient(to right,#09081550,#7777,#09081550)
    backdrop-filter blur(4px)
    cursor pointer
    width max(307px,15vw)
    margin 0 auto
    color #fff

button:hover
    border-color: #646cff

button:focus,
button:focus-visible
    outline: 4px auto -webkit-focus-ring-color

.card
    padding: 2em

#app
    max-width: 1280px
    margin: 0 auto
    padding: 2rem
    text-align: center
    
section.screen
    colors = 0 #000, 1 #222, 2 #444, 3 #666, 4 #888, 5 #aaa
    position fixed
    z-index -1
    inset: 0
    translate 0
    transition transform 1s cubic-bezier(1,0,0,1.5)
    background-repeat no-repeat
    background-size cover
    background-color #000
    padding ph(41) pw(99) 0

    &.left
        translate -100vw
    &.right
        translate 100vw


.main-title 
    position absolute
    font-size 5vmin
    left pw(207)
    top ph(360)

.page-title
    margin-bottom (60/1010)*100vh
    position relative
    margin-left pw(35)
    margin-top ph(190)
    font-size 24px
    &::before
        content ""
        background #7A0404
        position absolute
        top 0
        bottom 0
        width 5px
        left -30px
        font-weight 700

@media (prefers-color-scheme: light)
    :root
        color: #fff
        background-color: #ffffff

    a:hover
        color: #747bff


