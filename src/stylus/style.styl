@import "./import";
:root
    font-family: Inter, Avenir, Helvetica, Arial, sans-serif
    font-size: 16px
    line-height: 24px
    font-weight: 400

    color-scheme: light dark
    color: rgba(255, 255, 255, 0.87)
    background-color: #242424

    font-synthesis: none
    text-rendering: optimizeLegibility
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    -webkit-text-size-adjust: 100%

a
    font-weight: 500
    // color: #fff
    text-decoration: inherit
    transition color .4s

a:hover
    color: #535bf2

body
    margin 0
    padding 0

h1
    font-size: 3.2em
    line-height: 1.1

button
    border-radius: 8px
    border: 1px solid transparent
    padding: 0.6em 1.2em
    font-size: 1em
    font-weight: 500
    font-family: inherit
    background-color: #1a1a1a
    cursor: pointer
    transition: border-color 0.25s

button:hover
    border-color: #646cff

button:focus,
button:focus-visible
    outline: 4px auto -webkit-focus-ring-color

.card
    padding: 2em

#app
    max-width: 1280px
    margin: 0 auto
    padding: 2rem
    text-align: center
    
section.screen
    colors = 0 #000, 1 #222, 2 #444, 3 #666, 4 #888, 5 #aaa
    position fixed
    z-index -1
    inset: 0
    translate 0
    transition transform 1s cubic-bezier(1,0,0,1.5)
    display grid
    place-items center

    &.left
        translate -100vw
    &.right
        translate 100vw

    for i in colors
        &[data-number='6']
            position fixed
            z-index 0
            inset: 0
            background-color i[1]



@media (prefers-color-scheme: light)
    :root
        color: #213547
        background-color: #ffffff

    a:hover
        color: #747bff

    button
        background-color: #f9f9f9
